@using cccstc
@using System.Collections.Generic

@model IEnumerable<STC>

@{
	Layout = "/Views/Shared/_Layout.cshtml";
}

<row>

	<!-- Worker Names -->
	<div class="col-md-6">
		<h3 class="center">Registered STCs</h3>
		<ul class="list-group">
		@foreach(STC stc in Model)
		{
			<li class="list-group-item">
				<div class="center inline">@stc.Name</div>
			</li>
		}

		<li class="list-group-item">
			<div class="center">
				<input type="text" id="newName" class="fullwidth center">
			</div>
		</li>
		</ul>
	</div>

	<!-- Worker Emails -->
	<div class="col-md-5">
		<h3 class="center">Emails</h3>
		<ul class="list-group">
			@foreach(STC stc in Model)
			{
				<li class="list-group-item">
					<div class="center inline"><a href="mailto:@stc.Email">@stc.Email</a></div>
				</li>
			}

			<li class="list-group-item">
				<div class="center">
					<input type="text" id="newEmail" class="fullwidth center">
				</div>
			</li>
		</ul>
	</div>

	<!-- Worker Unregister Options -->
	<div class="col-md-1">
		<h3 class="center">Unregister</h3>
		<ul class="list-group">
			@foreach(STC stc in Model)
			{
				string uEmail = String.Format("\"{0}\"", stc.Email);
				<li class="list-group-item">
					<button onclick="unregisterUsername(@uEmail)">UN</button>
				</li>
			}
		</ul>
	</div>
</row>
<button class="btn btn-default btn-block" onclick="registerUser(newName, newEmail)">Register User</button>
<hr>
